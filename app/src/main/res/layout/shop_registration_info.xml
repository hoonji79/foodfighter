<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="가게 등록"
        android:textColor="#333333"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191" />



    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:fontFamily="@font/donglebold"
        android:gravity="center"
        android:text="푸드파이터"
        android:textColor="#121212"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />


    <EditText
        android:id="@+id/setShopName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_radius"
        android:ems="10"
        android:hint="가게명을 입력해 주세요"
        android:inputType="text"
        android:textSize="12dp"
        android:paddingLeft="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329" />


    <EditText
        android:id="@+id/setAddress"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_radius"
        android:ems="10"
        android:hint="가게 주소를 입력해 주세요"
        android:inputType="text"
        android:textSize="12dp"
        android:paddingLeft="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />

    <EditText
        android:id="@+id/setPhone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_radius"
        android:ems="10"
        android:hint="휴대폰 번호를 입력해 주세요"
        android:inputType="text"
        android:textSize="12dp"
        android:paddingLeft="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />

    <Button
        android:id="@+id/setBusinessLicense"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/primaryColor"
        android:text="사업자등록증 첨부"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />

    <EditText
        android:id="@+id/setName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_radius"
        android:ems="10"
        android:hint="대표자명을 입력해 주세요"
        android:inputType="text"
        android:textSize="12dp"
        android:paddingLeft="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/primaryColor"
        android:text="다음"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

    <Button
        android:id="@+id/setCategory"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/primaryColor"
        android:text="카테고리 선택"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />


</androidx.constraintlayout.widget.ConstraintLayout>